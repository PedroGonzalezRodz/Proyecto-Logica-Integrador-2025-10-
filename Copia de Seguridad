#include <iostream>
#include <string>
using namespace std;

void setColor(int color) {
    // Secuencias de escape para cambiar el color ( Pedro :])
    cout << "\033[" << color << "m";
}

int main() { 
    // Aqui declaramos las variables ( Pedro :] y Javier )
    string nombre, id, apellidoMA, apellidoPA, cont, ver, user, uservr, SS;
